{
  "build": {
    "builder": "nixpacks",
    "nixpacksConfig": {
      "python": "3.11.8"
    }
  },
  "deploy": {
    "startCommand": "gunicorn checkup.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5,
    "healthcheck": {
      "path": "/",
      "interval": 30,
      "timeout": 10
    }
  }
}
